<robot name="angle_finger">

<link name="wrist">
    <visual>
      <origin xyz="0 0 0.05" rpy="0 0 0" />
      <geometry>
        <cylinder length="0.1" radius="0.01"/>
      </geometry>
      <material name="green">
        <color rgba="0 1 0 1" />
      </material>
    </visual>
  </link>
  
  <link name="thumb_cmc">
    <visual>
      <origin xyz="0 0 0.05" rpy="0 0 0" />
      <geometry>
        <cylinder length="0.1" radius="0.01"/>
      </geometry>
      <material name="red">
        <color rgba="1 0 0 1" />
      </material>
    </visual>
  </link>
 
  
  <joint name="wrist_joint" type="revolute">
    <origin xyz="0 0 0.1" rpy="0 0 0"/>
    <parent link="wrist"/>
    <child link="thumb_cmc"/>
    <limit effort="30" velocity="1.0" lower="0" upper="350" />
  </joint>
  
 

</robot>
