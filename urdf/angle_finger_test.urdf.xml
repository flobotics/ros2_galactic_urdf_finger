<robot name="angle_finger">

<link name="metacarpals">
    <visual>
      <origin xyz="0 0 0.0" rpy="0 0 0" />
      <geometry>
        <mesh filename="package://ros2_galactic_urdf_finger/metacarpals.dae"/>
      </geometry>
      <material name="green">
        <color rgba="0 1 0 1" />
      </material>
    </visual>
  </link>
  
  <link name="metacarpals_2">
    <visual>
      <origin xyz="0 0 -0.004" rpy="0 0 1.6" />
      <geometry>
        <mesh filename="package://ros2_galactic_urdf_finger/metacarpals_joint.dae"/>
      </geometry>
      <material name="red">
        <color rgba="1 0 0 1" />
      </material>
    </visual>
  </link>
  
  <link name="proximal">
    <visual>
      <origin xyz="0 0 -0.004" rpy="0 0 0" />
      <geometry>
        <mesh filename="package://ros2_galactic_urdf_finger/proximal.dae"/>
      </geometry>
      <material name="red">
        <color rgba="1 0 0 1" />
      </material>
    </visual>
  </link>
  
  <link name="intermediate">
    <visual>
      <origin xyz="0 0 -0.004" rpy="0 0 0" />
      <geometry>
        <mesh filename="package://ros2_galactic_urdf_finger/intermediate.dae"/>
      </geometry>
      <material name="red">
        <color rgba="1 0 0 1" />
      </material>
    </visual>
  </link>
  
  <link name="distal">
    <visual>
      <origin xyz="0 0 -0.004" rpy="0 0 0" />
      <geometry>
        <mesh filename="package://ros2_galactic_urdf_finger/distal.dae"/>
      </geometry>
      <material name="red">
        <color rgba="1 0 0 1" />
      </material>
    </visual>
  </link>
 
  
  <joint name="metacarpals_joint" type="revolute">
    <origin xyz="0 0 0.076" rpy="0 0 0"/>
    <parent link="metacarpals"/>
    <child link="metacarpals_2"/>
    <axis xyz="0 1 0"/>
    <limit effort="30" velocity="1.0" lower="-1.6" upper="1.6" />
  </joint>
  
  <joint name="metacarpals_2_joint" type="revolute">
    <origin xyz="0 0 0.011" rpy="0 0 0"/>
    <parent link="metacarpals_2"/>
    <child link="proximal"/>
    <axis xyz="1 0 0"/>
    <limit effort="30" velocity="1.0" lower="-1.6" upper="1.6" />
  </joint>
  
  <joint name="proximal_joint" type="revolute">
    <origin xyz="0 0 0.04" rpy="0 0 0"/>
    <parent link="proximal"/>
    <child link="intermediate"/>
    <axis xyz="0 1 0"/>
    <limit effort="30" velocity="1.0" lower="-1.6" upper="1.6" />
  </joint>
  
  <joint name="intermediate_joint" type="revolute">
    <origin xyz="0 0 0.04" rpy="0 0 0"/>
    <parent link="intermediate"/>
    <child link="distal"/>
    <axis xyz="0 1 0"/>
    <limit effort="30" velocity="1.0" lower="-1.6" upper="1.6" />
  </joint>

</robot>
